{
    "compilerOptions": {
        "module": "CommonJS",
        "lib": ["ES2018"],
        "target": "ES2018",

        "experimentalDecorators": true,

        "strict": true,
        "alwaysStrict": true,
        "importsNotUsedAsValues": "error",

        // JSX
        "jsx": "react",
        "jsxFactory": "createElement",
        "jsxFragmentFactory": "Fragment",

        // Linting
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        // Library
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true, // Required for debugging NPM published package.

        // Output
        "outDir": "dist/",
        "rootDir": "src/",
        "newLine": "LF"
    },
    "include": ["src"],
    "exclude": ["src/test/converter", "src/test/module"]
}
