{
    "compilerOptions": {
        "module": "CommonJS",
        "lib": [
            "ES2018"
        ],
        "target": "ES2018",

        "experimentalDecorators": true,

        "strict": true,
        "alwaysStrict": true,

        // For tests
        "resolveJsonModule": true,

        // Linting
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        // Library
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true, // Required for debugging NPM published package.

        // Output
        "outDir": "dist/",
        "rootDir": "src/",
        "newLine": "LF"
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "src/test/converter/**/*.ts",
        "src/test/.dot/**/*.ts",
        "src/test/module/**/*.ts"
    ]
}
