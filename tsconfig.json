{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "DOM", // Required for TSX.
      "es2018" // Fully supported by Node 10.
    ],
    "target": "es2018",
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true, // Required for debugging NPM published package.
    "outDir": "dist/",
    "rootDir": "src/",
    "experimentalDecorators": true,
    "newLine": "LF",
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "createElement",

    "importsNotUsedAsValues": "error",

    // These really ought to be checked by a linter, but ESLint doesn't work properly with JSX.
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": [
    "src/test/converter/**/*.ts",
    "src/lib/output/plugins",
    "src/lib/converter/plugins"
  ]
}
